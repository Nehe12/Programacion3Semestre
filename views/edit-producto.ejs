    <div class="dashboard-content px-3 pt-4 ">
        
                  <!-- Fomulario -->
                  <button class="btn">EDITAR PRODUCTO</button>
                  <%if(products){%>
                    <form action="/updateproduc" method="post" >
                      <input id="id" name="id" value="<%=products.id_producto%>"  hidden>
                      <div class="mb-3">
                        <label for="nomProducto" class="form-label">Nombre Producto</label>
                        <input type="text" class="form-control" id="nomProducto"name="nomProducto" value="<%=products.nom_producto%>" placeholder="Producto">
                      </div>
                      <div class="mb-3">
                        <label for="canProducto" class="fom-label">Cantidad Producto</label>
                        <input type="number" class="form-control" id="canProducto" name="canProducto" value="<%=products.cantidad_product%>" placeholder="0">
                      </div>  
                      <div class="mb-3">
                        <label for="stock" class="fom-label">Stock</label>
                        <input type="number" class="form-control" id="stock" name="stock" value="<%=products.stock%>" placeholder="0">
                      </div>  
                      <div class="mb-3">
                        <label for="precio" class="fom-label">Precio</label>
                        <input type="number" class="form-control" id="precio" name="precio" value="<%=products.precio%>" placeholder="$0.00">
                      </div>  
                      <div class="mb-3">
                        <label for="lote" class="fom-label">lote</label>
                        <input type="number" class="form-control" id="lote" name="lote" value="<%=products.lote%>" placeholder="0">
                      </div>  
                      
                      <button type="submit" class="btn btn-primary">GUARDAR</button> 
                    </form>
                    <%}%>
                
          <!-- Cierre Modal Agregar Cliente-->
    </div>
