<%-include("template/header")%>
    <%-include("template/side-bar")%>
    <%-include("template/nav-bar")%>
    <div class="dashboard-content px-3 pt-4">
        <button type="button" class="btn btn-warning px-3 " >
            <a href="/create-producto" class="add-btn">
                <i class="bi bi-plus-circle-fill"></i>Agregar Producto
            </a>
          </button>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NOMBRE PRODUCTO</th>
                    <th>CANTIDAD DE PRODUCTO</th>
                    <th>EN STOCK</th>
                    <th>PRECIO</th>
                    <th>LOTE</th>
                    <th>ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                <%results.forEach((user)=>{%>
                <tr>
                    <td><%=user.id_producto%></td>
                    <td><%=user.nom_producto%></td>
                    <td><%=user.cantidad_product%></td>
                    <td><%=user.stock%></td>
                    <td><%=user.precio%></td>
                    <td><%=user.lote%></td>
                    <td>
                        <div class="text-center">
                            <div class="btn-group">
                                <button class="btn btn-danger btnDelete" >
                                  <a href="/deleteproducto/<%= user.id_producto %>">
                                  <i class="bi bi-trash3-fill"></i>
                                  </a>
                                </button>
                                <button class="btn btn-warning btnEditar"  > 
                                  <a href="/edit-producto/<%= user.id_producto %>"  >
                                    <i class="bi bi-pencil-square"></i>  
                                </a>
                                </button>
                            </div>
                        </div>
                      </td>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
<%-include("template/footer")%>